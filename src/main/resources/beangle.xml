<?xml version="1.0"?>
<beangle xmlns="http://beangle.github.io/schema/framework"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://beangle.github.io/schema/framework http://beangle.github.io/schema/framework-1.0.xsd">
  <ems app-name="edu-course-webapp"/>

  <cdi>
    <module class="org.openurp.edu.course.web.action.DefaultModule"/>
    <module class="org.openurp.starter.web.ProjectModule"/>

    <module class="org.beangle.serializer.text.DefaultModule"/>
    <module class="org.beangle.serializer.json.DefaultModule"/>
    <module class="org.beangle.serializer.xml.DefaultModule"/>
  </cdi>

  <orm>
    <mapping class="org.openurp.edu.course.app.model.DefaultMapping"/>
    <naming>
      <profile package="org.openurp.edu.course.app.model" pluralize="true" schema="app"/>
    </naming>
  </orm>

  <mvc>
    <profile package="org.openurp.edu.course.web.action">
      <url path="/" suffix="" style="seo"/>
      <interceptor name="web.Interceptor.hibernate"/>
      <interceptor name="web.Interceptor.security"/>
    </profile>
    <profile package="org.openurp.edu.course.web.ws">
      <action suffix="WS" defaultMethod="index"/>
      <url path="/" suffix="" style="seo"/>
      <interceptor name="web.Interceptor.hibernate"/>
    </profile>
  </mvc>


</beangle>
